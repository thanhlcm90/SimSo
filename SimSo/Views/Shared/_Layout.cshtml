<body class="page show-grid">
    <div class="col-top afixed">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- UI TOP -->
                    <a class="overlay" href="#2"></a>
                    <div class="top">
                        <span class="md-hidden icon-menu"><a id="icon-menu" href="#0"><i class="fa fa-bars"></i></a></span>
                        <ul class="mainmenu">
                            @if (@ViewBag.UTitle == null)
                            {
                                <li><a class="active" href="/">Trang chủ</a></li>
                            }
                            else
                            {
                                <li><a href="/">Trang chủ</a></li>
                            }
                            <li><a href="/dat-mua-sim" class="@ViewBag.UTitle">Đặt mua sim</a></li>
                            @if (menus != null)
                            {
                                foreach (var item in menus)
                                {
                                    var title = SimSo.Helper.StringHelper.UnicodeParse(item.Name);
                                    if (@title == @ViewBag.UTitle)
                                    {
                                        <li><a href="/tin-tuc/@title" class="active">@item.Name</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/tin-tuc/@title">@item.Name</a></li>
                                    }
                                }
                            }
                        </ul>
                        <ul class="pull-right">
                            <li>
                                <h3 class="top-hotline red-text"><i class="fa fa-phone"> </i>Hotline : 1900 6029</h3>
                            </li>
                        </ul>
                    </div>
                    <!-- end UI TOP -->
                </div>
            </div>
        </div>
    </div> <!-- top -->
    <!-- banner right and left sidebar -->
    <div class="banner-side-wrapper">
        <div class="fixed-top-90px">
            <div class="container">
                <div class="banner-side-left"><a href="#0"><img src="~/Content/html_sim/images/banner-side-left.png" alt=""></a></div>
                <div class="banner-side-right"><a href="#0"><img src="~/Content/html_sim/images/banner-side-left.png" alt=""></a></div>
            </div>
        </div>
    </div>
    <div class="col-header">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h1 class="logo"><a href="/"><img src="~/Content/html_sim/images/logo_sodep.svg" alt="" /></a></h1>
                </div>
                <div class="col-md-8">
                    <div class="banner pull-right"><a href="#0"><img src="~/Content/html_sim/images/banner-header-right.png" alt="banner" /></a></div>
                </div>
            </div>
        </div>
    </div>
    <!-- home main content-->
    <div class="col-main">
        <div class="container">
            <div class="row">
                <div class="main-side-wrapper">
                    <div class="col-md-9 main-wrapper">
                        <!-- maincotnent-->
                        <div class="main-content">
                            <!-- search box-->
                            <!-- SEARCH FUL WIDTH UI-->
                            <div class="search-full">
                                @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                                {
                                    <div class="clearfix">
                                        <div class="group-item col-100">
                                            @if (networks != null)
                                            {

                                                foreach (var item in networks)
                                                {
                                                    var name = ((string)item.Name).ToLower();
                                                    name = SimSo.Helper.StringHelper.UnicodeParse(name);
                                                    <div class="item col-md-2 col-sm-6 col-xs-12 text-uppercase">
                                                        <a href="/mang/@name">@item.Name</a>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="search-form-dropdown text-center">
                                            <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                                <select class="form-control" name="simtype" id="stSelect">
                                                    <option value="">Loại Sim</option>
                                                    @if (simtypes != null)
                                                    {
                                                        foreach (var item in simtypes)
                                                        {
                                                            var select = item.ID == ViewBag.SimType;
                                                            <option value="@item.ID" selected="@select">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                                <select class="form-control" name="network" id="nwSelect">
                                                    <option value="">Nhà mạng</option>
                                                    @if (networks != null)
                                                    {
                                                        foreach (var item in networks)
                                                        {
                                                            var select = item.ID == ViewBag.Network;
                                                            <option value="@item.ID" selected="@select">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="form-group col-md-2 col-sm-6 col-xs-12 sm-hidden">
                                                <input type="text" class="form-control" style="color:black" name="price_min" id="price_min" value="@ViewBag.Price_Min" placeholder="Giá từ...">
                                            </div>
                                            <div class="form-group col-md-2 col-sm-6 col-xs-12 sm-hidden">
                                                <input type="text" class="form-control" style="color:black" name="price_max" id="price_max" value="@ViewBag.Price_Max" placeholder="Giá đến...">
                                            </div>
                                        </div>
                                        <!-- col-md-8-->
                                        <div class="celarfix"></div>
                                    </div>
                                    <div class="form-group coll-md-12 search-inline">
                                        <input type="tel" style="color:black" name="searchStr" id="searchStr" value="@ViewBag.SearchStr" placeholder="Nhập từ khóa tìm kiếm ..." class="col-100" />
                                        <button type="submit">
                                            <span>Tìm kiếm</span>
                                        </button>
                                    </div>
                                <!-- alert-->
                                    <div role="alert" class="alert alert-dismissible fade in sm-hidden">
                                        <button type="button" data-dismiss="alert" aria-label="Close" class="close"><span aria-hidden="true">&times;</span></button>      &bull; Tìm sim có số 6789 bạn hãy gõ 6789 , &bull; Tìm sim có đầu 090 đuôi 8888 hãy gõ 090*8888, &bull; Tìm sim bắt đầu bằng 0914 đuôi bất kỳ, bạn hãy gõ: 0914*
                                    </div>
                                <!-- end alert-->
                                }
                            </div>
                            @RenderBody()
                            <br />
                            <!-- banner main content-->
                            <div class="banner text-center"><a href=""><img src="~/Content/html_sim/images/banner.png" alt="banner maincontent" /></a></div>
                            <!-- backlink-->
                            <div class="tag-wrapper">
                                <h3 class="title-module"><a href="#">Chọn loại sim </a></h3>
