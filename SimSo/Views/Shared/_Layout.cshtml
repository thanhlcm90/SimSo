                                    @if (simtypes != null)
                                    {
                                        foreach (var item in simtypes)
                                        {
                                            var res = (string)item.Name;
                                            res = res.Replace("-", "");
                                            var title = SimSo.Helper.StringHelper.UnicodeParse(res);
                                            <li class="col-25"><a href="/loai-sim/@title">@res</a></li>
                                        }
                                    }

                                </ul>
                            </div>
                        </div>
                        <!-- end main content -->
                    </div>
                    <div class="col-md-3 sidebar-wrapper">
                        <div class="sidebar">
                            <!-- sidebar-->
                        </div>
                        <h3 class="sidebar-title"><a href="#" class="text-uppercase">Kinh doanh online</a></h3>
                        <div class="sidebar-content">
                            <ul class="support-module">
                                @if (employees != null)
                                {
                                    foreach (var emp in employees)
                                    {
                                        <li><a href="#0" class="support-name clearfix">@emp.FullName</a><a href="#0" class="support-phone">@emp.Mobile</a><span class="support-icon text-center"><a href="ymsgr:sendIM?@emp.Yahoo"><img border="0" src="http://opi.yahoo.com/online?u=@emp.Yahoo&m=g&t=1&l=us"></a></span></li>
                                    }
                                }
                            </ul>
                            <p class="text-center"><strong>Làm việc từ 7h - 21h</strong><br /><span>Tất cả các ngày trong tuần</span><br /><small>(Ngoài giờ Quý khách vui lòng <br />Đặt mua trên Web hoặc gửi SMS)</small></p>
                            <p class="text-center"><span>Bộ phận kế toán</span><br /><strong>0912.22.11.22</strong></p>
                            <div class="text-center">
                                <div class="red-text">Hotline khiếu nại dịch vụ</div>
                                <div class="text-center"><strong>01292.866.866</strong></div>
                            </div>
                        </div>
                        <h3 class="sidebar-title"><a href="#" class="text-uppercase">Đơn hàng mới</a></h3>
                        <div class="sidebar-content">
                            <ul class="list-news">
                                <marquee direction="up" onmouseover="this.stop()" scrolldelay="1" scrollamount="2" onmouseout="this.start()" height="350" align="left" style="height: 350px;">
                                    @if (topOrders != null)
                                    {
                                        foreach (var item in topOrders)
                                        {
                                            var number = ((string)item.Number).Substring(0, 6).PadRight(((string)item.Number).Length, '*');
                                            <li><a href="javascript:void(0)" class="title">@item.FullName</a><a href="javascript:void(0)" class="description">Đặt sim: @number</a><a href="javascript:void(0)"> Vào lúc: @String.Format("{0: hh:mm dd/MM/yyyy}", item.CreateDate)</a></li>
                                        }
                                    }
                                </marquee>
                            </ul>
                        </div>
                        <h3 class="sidebar-title"><a href="#" class="text-uppercase">Bạn cần biết</a></h3>
                        <div class="sidebar-content">
                            <ul class="list-news">
                                @if (topNews != null)
                                {
                                    foreach (var item in topNews)
                                    {
                                        var menuTitle = SimSo.Helper.StringHelper.UnicodeParse(item.Menu.Name);
                                        var newTitle = SimSo.Helper.StringHelper.UnicodeParse(item.Title);
                                        if (item.Menu.Type == 1)
                                        {
                                            <li><a href="/tin-tuc/@menuTitle" class="description">@item.Title<br /><small><a href="#0">Vào lúc: @String.Format("{0: hh:mm dd/MM/yyyy}", item.CreateDate)</a></small></a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/tin-tuc/@menuTitle/@item.ID/@newTitle" class="description">@item.Title<br /><small><a href="#0">Vào lúc: @String.Format("{0: hh:mm dd/MM/yyyy}", item.CreateDate)</a></small></a></li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                        <h3 class="sidebar-title"><a href="#" class="text-uppercase">Thống kê truy cập</a></h3>
                        <div class="sidebar-content">
                            <ul class="list-news">
                                <li>Hiện tại: @ViewBag.CurrentCount</li>
                                <li>Hôm nay: @ViewBag.TodayCount</li>
                                <li>Tổng số: @ViewBag.TotalCount</li>
                            </ul>
                        </div>
                        <div class="sidebar-content text-center"><span><img src="~/Content/html_sim/images/dangkybocongthuong.png" title="đăng ký bộ công thương" /></span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
